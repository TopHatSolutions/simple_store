<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Average Price of Products: <%= @products.all.average('price') %></h3>
<h3>Maximum Price of Products: <%= @products.all.maximum('price') %></h3>
<h3>Total Unique Products: <%= @products.all.count %></h3>
<h3>Sum of Stock for Products: <%= @products.all.sum('stock_quantity') %></h3>
<%= link_to 'New Product', new_product_path %>
